.container-fluid  
  .bg
  .authform.col-xs-8.col-xs-offset-2.col-sm-4.col-sm-offset-4.col-md-4.col-md-offset-4.bg-info{id:'login-panel'}
    %p{id:'logo'} Memify
    = form_tag session_path(:user) do
      .login-field
        %p.login-label USER
        = text_field_tag 'user[username]'
      .login-field
        %p.login-label PASSWORD
        = password_field_tag 'user[password]'
      .checkbox
        = check_box_tag 'user[remember_me]'
        %p
          = label_tag 'user[remember_me]', 'Remember me', { class: "login-label" }
      .login-field
        %button.button Sign in
      .login-field
        = link_to "Forgot your password?", new_password_path(:user), { class: "login-label" }